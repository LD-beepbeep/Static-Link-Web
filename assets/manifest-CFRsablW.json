{
  "name": "Static Link",
  "short_name": "Static Link",
  "description": "Bundle links, notes, and files for instant sharing with QR codes or files. Free, open source, no cloud required.",
  "start_url": "/Static-Link-Web/",
  "scope": "/Static-Link-Web/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2D3748",
  "icons": [
    {
      "src": "assets/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "assets/icon-512-mgDEDs5h.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/screen1.png",
      "sizes": "458x929",
      "type": "image/png"
    },
    {
      "src": "screenshots/screen2.png",
      "sizes": "458x929",
      "type": "image/png"
    },
    {
      "src": "screenshots/screen3.png",
      "sizes": "458x929",
      "type": "image/png"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/plain"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", "slpkg"],
        "text/plain": [".txt"]
      }
    }
  ]
}
